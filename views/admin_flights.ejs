<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="style.css">
    <style>
        .navbtn {
            background-color: rgb(227, 161, 197);
            background-image: none;
            color: #fff;
            cursor: pointer;
            font-family: ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont,
                Segoe UI, Roboto, Helvetica Neue, Arial, Noto Sans, sans-serif,
                Apple Color Emoji, Segoe UI Emoji, Segoe UI Symbol, Noto Color Emoji;
            font-size: 100%;
            font-weight: 900;
            line-height: 1.5;
            margin: 0;
            padding: 0;
            text-transform: uppercase;
            border-radius: 99rem;
            border-width: 2px;
            padding: 0.8rem 3rem;
        }

        .navbtn:hover {
            background-color: rgb(237, 197, 219);
        }

        table {
            border-collapse: collapse;
            width: 100%;
            border: 2px solid black;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        tr:hover {
            background-color: #E50087;
        }

        .table-container {
            padding-top: 10%;
            padding-left: 20%;
            padding-right: 20%;
        }

        .input {
            border: 2px solid transparent;
            width: 15em;
            height: 2.5em;
            padding-left: 0.8em;
            outline: none;
            overflow: hidden;
            background-color: #F3F3F3;
            border-radius: 10px;
            transition: all 0.5s;
            }

        .input:hover,
        .input:focus {
            border: 2px solid #4A9DEC;
            box-shadow: 0px 0px 0px 7px rgb(74, 157, 236, 20%);
            background-color: white;
            }
            /* From Uiverse.io by gharsh11032000 */ 
        .menu {
        font-size: 16px;
        line-height: 1.6;
        color: #000000;
        width: fit-content;
        display: flex;
        list-style: none;
        }

        .menu a {
        text-decoration: none;
        color: inherit;
        font-family: inherit;
        font-size: inherit;
        line-height: inherit;
        }

        .menu .link {
        background-color: #E50087;
        color: #ffffff;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
        padding: 12px 36px;
        border-radius: 16px;
        overflow: hidden;
        transition: all 0.48s cubic-bezier(0.23, 1, 0.32, 1);
        }

        .menu .link::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: #E50087;
        z-index: -1;
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 0.48s cubic-bezier(0.23, 1, 0.32, 1);
        }

        .menu .link svg {
        width: 14px;
        height: 14px;
        fill: #ffffff;
        transition: all 0.48s cubic-bezier(0.23, 1, 0.32, 1);
        }

        .menu .item {
        position: relative;
        }

        .menu .item .submenu {
        display: flex;
        flex-direction: column;
        align-items: center;
        position: absolute;
        top: 100%;
        border-radius: 0 0 16px 16px;
        left: 0;
        width: 100%;
        overflow: hidden;
        border: 1px solid #cccccc;
        opacity: 0;
        visibility: hidden;
        transform: translateY(-12px);
        transition: all 0.48s cubic-bezier(0.23, 1, 0.32, 1);
        z-index: 1;
        pointer-events: none;
        list-style: none;
        }

        .menu .item:hover .submenu {
        opacity: 1;
        visibility: visible;
        transform: translateY(0);
        pointer-events: auto;
        border-top: transparent;
        border-color: #E50087;
        }

        .menu .item:hover .link {
        color: #ffffff;
        border-radius: 16px 16px 0 0;
        }

        .menu .item:hover .link::after {
        transform: scaleX(1);
        transform-origin: right;
        background-color: #E50087;
        
        }

        .menu .item:hover .link svg {
        fill: #ffffff;
        transform: rotate(-180deg);
        background-color: #E50087;
        }

        .submenu .submenu-item {
        width: 100%;
        background-color: rgb(227, 161, 197);
        transition: all 0.48s cubic-bezier(0.23, 1, 0.32, 1);
        }

        .submenu .submenu-link {
        display: block;
        padding: 12px 24px;
        width: 100%;
        position: relative;
        text-align: center;
        transition: all 0.48s cubic-bezier(0.23, 1, 0.32, 1);
        }

        .submenu .submenu-item:last-child .submenu-link {
        border-bottom: none;
        }

        .submenu .submenu-link::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        transform: scaleX(0);
        width: 100%;
        height: 100%;
        background-color: rgb(227, 161, 197);
        z-index: -1;
        transform-origin: left;
        transition: transform 0.48s cubic-bezier(0.23, 1, 0.32, 1);
        }

        .submenu .submenu-link:hover:before {
        transform: scaleX(1);
        transform-origin: right;
        }

        .submenu .submenu-link:hover {
        color: #ffffff;
        }
        .styled-text {
            background-color: rgb(227, 161, 197);
            color: #ffffff; 
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            padding: 12px 36px; /* Same padding as the menu */
            border-radius: 16px; /* Same rounded corners */
            font-size: 16px; /* Same font size */
            line-height: 1.6; /* Line height for text spacing */
            line-height: 1.6; /* Line height for text spacing */
            width: fit-content; /* Allows width to match content size */
            min-width: 240px; /* Ensure it has a similar width to the menu */
    
        }
        .action-container {
            display: flex;
            justify-content: space-between; /* Space out the sections evenly */
            gap: 20px; /* Gap between sections */
            margin-top: 20px;
        }

        .action-section {
            flex: 1; /* Allow the sections to take equal space */
            padding: 0 10px; /* Padding for spacing between sections */
        }

    </style>
   
</head>
<body style="background-color: rgb(155, 199, 153)">
    <div>
        <h1>Holiday Hackers</h1>
        <div style="float: right">
            <button class="navbtn" onclick="window.location.href='/dest'">
                Destinations
            </button>
            <button class="navbtn" onclick="window.location.href='/quiz_home'">
                Quiz
            </button>
            <button class="navbtn" onclick="window.location.href='/flights'">
                Flights
            </button>
        </div>

            <div class="table-container">
                <table>
                    <tr>
                        <th>Flight Number</th>
                        <th>Departure Airport</th>
                        <th>Destination Airport</th>
                        <th>Departure Date</th>
                        <th>Departure Time</th>
                        <th>Arrival Date</th>
                        <th>Arrival Time</th>
                    </tr>
                    <% for (flight of allFlights){ %>
                        <tr>
                            <td><%= flight.flight_num %></td>
                            <td>temp</td>
                            <td>temp</td>
                            <td>Nov. 18</td>
                            <td><%= flight.depart_time %></td>
                            <td>temp</td>
                            <td><%= flight.arrival_time %></td>
                        </tr>
                        <% } %>
                </table>

            </div>
            <div class="action-container">
                <div class="action-section">
                    <h2> Add a Flight</h2>
                    <form id="addFlightForm" method="POST" action ="/add-flight">
                    <input class="input" type="number" placeholder="Airport Code" id="aiport_code" name="flightNumber" required>
                    <br>
                    <input class="input" type="number" placeholder="Arrival Airport" id="a_loc" name="arrivalGate" required>
                    <input class="input" type="number" placeholder="Departure Airport" id="d_loc" name="departGate" required>
                    <input class="input" type="number" placeholder="Cost" id="cost" name="cost" required>
                    <input class="input" type="number" placeholder="Duration" id="duration" name="duration" required>
                    <br>
                    <input class="input" type="text" placeholder="End City" id="end_city" name="end_city" required>
                    <input class="input" type="text" placeholder="Start City" id="start_city" name="start_city" required>
                    <br>
                
                    <input class="input" type="number" placeholder="Departure Time" id="d_time" name="depart_Time" required>
                    <input class="input" type="number" placeholder="Arrival Time" id="a_time" name="arrival_Time" required>
                    <br>
                    <br>
                    <button class="navbtn">
                        Enter New Flight
                    </button>
                </form>
                </div>
                <div class="action-section">
                    <h2> Edit a Flight </h2>
                        <div class="menu">
                        <div class="item">
                            <a href="#" class="link">
                            <span> Flights </span>
                            <svg viewBox="0 0 360 360" xml:space="preserve">
                                <g id="SVGRepo_iconCarrier">
                                <path
                                    id="XMLID_225_"
                                    d="M325.607,79.393c-5.857-5.857-15.355-5.858-21.213,0.001l-139.39,139.393L25.607,79.393 c-5.857-5.857-15.355-5.858-21.213,0.001c-5.858,5.858-5.858,15.355,0,21.213l150.004,150c2.813,2.813,6.628,4.393,10.606,4.393 s7.794-1.581,10.606-4.394l149.996-150C331.465,94.749,331.465,85.251,325.607,79.393z"
                                ></path>
                                </g>
                            </svg>
                            </a>
                            <div class="submenu">
                                <% for (flight of allFlights){ %>
                                    <div class="submenu-item">
                                        <a href="#" class="submenu-link" onclick="updateEdit('<%=flight.flight_num %>')"> <%= flight.flight_num %> </a>
                                    </div>
                                    <% } %>
                            </div>
                        </div>
                        </div>
                        <div class="styled-text" id="selected-edit">
                            No Flight Selected
                        </div>
                        <form id="updateFlightForm" method="POST" action ="/update-flight">
                        <input type="hidden" name="flightNumberUpdate" id="flightNumberUpdate">
                        <input class="input" type="number" placeholder="Arrival Airport" id="a_loc" name="arrivalGate">
                        <input class="input" type="number" placeholder="Departure Airport" id="d_loc" name="departGate">
                        <input class="input" type="number" placeholder="Cost" id="cost" name="cost">
                        <input class="input" type="number" placeholder="Duration" id="duration" name="duration">
                        <br>
                        <input class="input" type="text" placeholder="End City" id="end_city" name="end_city">
                        <input class="input" type="text" placeholder="Start City" id="start_city" name="start_city">
                        <br>
                    
                        <input class="input" type="number" placeholder="Departure Time" id="d_time" name="depart_Time">
                        <input class="input" type="number" placeholder="Arrival Time" id="a_time" name="arrival_Time">
                        <br>

                        <br>
                        <br>
                        <button class="navbtn">
                            Save Changes
                        </button>
                    </form>
                </div>
                <div class="action-section">
                    <h2> Remove a Flight </h2>
                    <form id="deleteFlightForm" method="POST" action ="/delete-flight">
                    <input type="hidden" name="flightNumberRemove" id="flightNumberRemove">
                    <div class="menu">
                        <div class="item">
                            <a href="#" class="link">
                            <span> Flights </span>
                            <svg viewBox="0 0 360 360" xml:space="preserve">
                                <g id="SVGRepo_iconCarrier">
                                <path
                                    id="XMLID_225_"
                                    d="M325.607,79.393c-5.857-5.857-15.355-5.858-21.213,0.001l-139.39,139.393L25.607,79.393 c-5.857-5.857-15.355-5.858-21.213,0.001c-5.858,5.858-5.858,15.355,0,21.213l150.004,150c2.813,2.813,6.628,4.393,10.606,4.393 s7.794-1.581,10.606-4.394l149.996-150C331.465,94.749,331.465,85.251,325.607,79.393z"
                                ></path>
                                </g>
                            </svg>
                            </a>
                            <div class="submenu">
                                <% for (flight of allFlights){ %>
                                    <div class="submenu-item">
                                        <a class="submenu-link" onclick="updateRemove('<%=flight.flight_num %>')"> <%= flight.flight_num %> </a>
                                    </div>
                                    <% } %>
                            </div>
                        </div>
                        </div>
                        <br>
                        <div type="input" class="styled-text" id="selected-remove" >
                            No Flight Selected
                        </div>
                        <br>
                        <button class="navbtn">
                            Remove
                        </button>
                    </form>
                </div>
            </div>
        
    </div>
</body>

</html>

<script>
    // Function to update the styled-text div when a flight is selected
    function updateEdit(flightNumber) {
        // Get the element with the id "styled-text"
        var h = document.getElementById('selected-edit');
        
        // Update the content of the div to the selected flight number
        h.innerHTML = "Flight Selection: " + flightNumber;

        var s = document.getElementById('flightNumberUpdate');

        s.value = flightNumber;
    }
    function updateRemove(flightNumber) {
        // Get the element with the id "styled-text"
        var h = document.getElementById('selected-remove');
        
        // Update the content of the div to the selected flight number
        h.innerHTML = "Flight Selection: " + flightNumber;
         
        var s = document.getElementById('flightNumberRemove')
        s.value = flightNumber;
    }
</script>
